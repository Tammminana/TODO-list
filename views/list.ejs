<%- include("header") -%>
    <div class="box" id="heading">
      <h1> <%= givenDay %> </h1>
    </div>

    <div class="box">
        <% nextItems.forEach(e => { %>
          <form class="" action="/delete" method="post">
            <div class="item">
              <input type="checkbox" name="checkbox" value="<%= e._id %>" onchange="this.form.submit()">
              <p> <%= e.name %> </p>
            </div>
            <input type= "hidden" name = "customList" value = "<%= givenDay %>">
          </form>

        <% }); %>


        <form class="item" action="/" method="post">
          <input type="text" name="listItem" placeholder="Enter Item" autofocus autocomplete="off">
          <button type="submit" name="send" value = <%= givenDay %> >+</button>
        </form>
    </div>
